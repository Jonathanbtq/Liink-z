{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="register_wdt">
		<div class="register_h_ctn">
			<h1 class="h_register">Create your account now</h1>
		</div>
		
		<div class="register_ctn">
			<div class="form_register">
				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.pseudo)}}
				{% if message == true %}
					<span class="span_register_error">This pseudo / username is already taken</span>
				{% endif %}
				{{ form_row(registrationForm.email)}}
				{{ form_row(registrationForm.plainPassword) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="btn_register_submit">Sign up ></button>
				{{ form_end(registrationForm) }}

			</div>
		</div>

		<div class="register_p_ctn">
			<p>Already have you an account?<a href="{{ path('login')}}"><span class="span_red_color"> Login</span></a></p>
		</div>
	</div>
	
	
	
{% endblock %}
